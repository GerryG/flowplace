	<p class='holoptiview_box_title'><%= title %></p>
<% for activity in find_activites(conditions)%>
	<div class='activity clear'>
		<% activity_type = activity.humanize.downcase %>
		<%= gravitar_image_tag(activity.user,:size=>20) %> 
		<%= link_to activity.user.full_name,"/?user_id=#{activity.user_id}" %> <%= activity.contents %> <%= %w(a e i o u).include?(activity_type[0..0]) ? 'an' : 'a' %> <%= a = activity.activityable; a ? link_to(activity_type,polymorphic_url(a)) : activity_type %> 
		<%= time_ago_in_words(activity.created_at) %> ago
	</div>
<%end%>
