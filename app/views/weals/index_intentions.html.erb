<% @title='Intentions' %>

<h3>Intentions</h3>

<div id="intention_tag_cloud">
	Tags: <%= render_weals_tag_cloud(:conditions => ['fulfiller_id = ? or requester_id = ?',current_user.id,current_user.id])%>
</div>
<p> <%= link_to 'Place a new intention',new_intention_path %></p>

<ul class="item_list">
<% for weal in @weals %>
<li class="item" style="margin: <%= weal.level==0 ? 5 : 0 %>px 0 0 <%= weal.level*20 %>px;">
	<%=link_to weal.title,edit_intention_path(weal),{:title=>weal.description} %>
	as <%= weal.requester == current_user ? 'requester' : 'fulfiller' %>
	(<%= link_to 'Delete', weal, :confirm => 'Are you sure?'+ (weal.children? ? " Warning: This intention has child-intentions, deleting it will delete all children." : ''), :method => :delete %>)
</ul>
</li>

<% end %>
