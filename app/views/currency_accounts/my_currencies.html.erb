<% @title='My Currencies' %>
<h3>My Currencies</h3>

<table>
  <tr>
    <th colspan=2>Currency</th>
    <th>Summary</th>
  </tr>

<% for currency_account in @currency_accounts %>
  <tr id="currency_<%=currency_account.currency.name_as_html_id%>">
    <td><%= render_currency_icon(currency_account.currency,20) %></td>
    <td><%= link_to currency_account.currency.name, '/' %> <% if !currency_account.currency.symbol.blank? %>(<%=currency_account.currency.symbol%>)<%end%> </td>
    <td><%= currency_account.summary %></td>
    <td><%= link_to 'Leave currency', currency_account, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Join Currency', join_currency_path %>
