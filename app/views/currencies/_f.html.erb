<%= f.error_messages %>
<%= hidden_field_tag :currency_params_key, @currency.class.to_s.underscore%>
<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :description %><br />
  <%= f.text_area :description, :rows => 4, :cols => 70 %>
</p>

<p>
  <%= f.label :type %><br />
  <%= f.select :type,currency_types_list_for_select,:include_blank => true %>
</p>

<p>
  <%= f.label :icon_url %><br />
  <%= f.text_field :icon_url %>
</p>

<p>
  <%= f.label :symbol %><br />
  <%= f.text_field :symbol %>
</p>

<p>
  <%= f.label :global %><br />
  <%= f.check_box :global %>
</p>
<p>
  <%= f.label :circle_id %><br />
  <%= f.select(:circle_id, Circle.find(:all).collect {|p| [ p.name, p.id ] }, {:include_blank => '-none-'})%>
</p>
