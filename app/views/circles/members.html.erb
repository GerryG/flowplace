<% @title="Members of #{h @current_circle.name}" %>

<%if @users.empty?%>This circle has no members!
<%else%>
  <table>
  <tr>
    <th>User Name</th>
  </tr>
  <% for user in @users%>
    <tr>
      <td>
        <%= gravitar_image_tag(user,:size=>40)  %>
        <%= link_to user.full_name,"/?user_id=#{user.id}" %> (<%= user.user_name%>)
      </td>
    </tr>
  <% end %>
  </table>
<% end %>
